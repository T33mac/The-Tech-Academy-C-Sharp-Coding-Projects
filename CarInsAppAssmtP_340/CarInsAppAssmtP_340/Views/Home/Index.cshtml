    <div class="row no-gutters m-3">
        <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
            <div class="card-header text-center">
                <h3 class="m-0">Your Information</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Driver", "Home", FormMethod.Post))
                {
                <div class="row">
                    <div class="form-group col-md-12 text-center">
                        <h5>What is your first name?</h5>
                        <input name="FirstName" type="text" class="form-control text-center" />
                    </div>
                    <div class="form-group col-md-12 text-center">
                        <h5>What is your last name?</h5>
                        <input name="LastName" type="text" class="form-control text-center" />
                    </div>
                    <div class="form-group col-md-12 text-center">
                        <h5>What is your email address?</h5>
                        <input name="EmailAddress" type="email" class="form-control text-center" />
                    </div>
                    <div class="form-group col-md-12 text-center">
                        <h5>Please enter your date of birth.</h5>
                        <input name="DateOfBirth" type="date" class="form-control text-center" />
                    </div>
                    <div class="form-group col-md-12 text-center">
                        <h5>What is the year of your car?</h5>
                        <input name="YearOfCar" type="text" class="form-control text-center" />
                    </div>
                    <div class="form-group col-md-12 text-center">
                        <h5>What is the make of your car?</h5>
                        <input name="MakeOfCar" type="text" class="form-control text-center" />
                    </div>
                    <div class="form-group col-md-12 text-center">
                        <h5>What is the model of your car?</h5>
                        <input name="ModelOfCar" type="text" class="form-control text-center" />
                    </div>
                    <div class="form-group col-md-12 text-center">
                        <h5>Have you ever had a DUI? Enter "yes" or "no".</h5>
                        <input name="Dui" type="text" class="form-control text-center" />
                    </div>
                    <div class="form-group col-md-12 text-center">
                        <h5>How many speeding tickets have you had? If none, enter "0".</h5>
                        <input name="SpeedingTickets" type="text" class="form-control text-center" />
                    </div>
                    <div class="form-group col-md-12 text-center">
                        <h5>Would you like full coverage or liability insurance? Enter "full" or "liability".</h5>
                        <input name="Coverage" type="text" class="form-control text-center" />
                    </div>
                    <button type="submit" class="btn btn-block btn-primary">Submit</button>
                </div>
                }
            </div>
        </div>
    </div>